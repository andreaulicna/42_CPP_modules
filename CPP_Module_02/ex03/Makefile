NAME = bsp

SRC = main.cpp \
	bsp.cpp \
	Fixed.class.cpp \
	Point.class.cpp

HEADER = Fixed.class.hpp \
		Point.class.hpp

OBJ = $(SRC:.cpp=.o)

CFLAGS = -Wall -Wextra -Werror -std=c++98 -g

CPP = c++

RM = rm -f

all: $(NAME)
	@echo "$(NAME) executable ready âœ…"

$(NAME): $(OBJ)
	$(CPP) $(CFLAGS) -o $@ $^

$(OBJ): $(HEADER)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re:	fclean all

.PHONY: all clean fclean re